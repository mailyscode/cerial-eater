<div class="mx-12 lg:m-0 bg-fixed bg-cover bg-center bg-resources bg-no-repeat h-screen flex flex-col">

 <!-- ----- Header ----- -->
  <h1 class="pt-24 md:pt-10 text-center text-7xl md:text-4xl font-display text-white-light font-bold">Cerial Resources</h1>
  <div class="p-8 md:pt-4 w-full text-2xl md:text-base text-center text-white-light tracking-wider">
    <p>Resources to yield some more <span class="font-bold">seeds of ideas</span> into your mind</p>
  </div>

<!-- Resources menu -->
  <div class="mb-4 px-16 flex justify-around md:justify-center">
    <%= link_to 'Books', resources_path(resource_type: 'book'), class:"py-1 px-10 md:mx-12 flex items-center border-4 md:border-2 border-white-light rounded-full text-3xl md:text-lg text-white-light font-display" %>
    <%= link_to 'Documentaries', resources_path(resource_type: 'documentary'), class:"py-1 px-10 md:mx-12 flex items-center border-4 md:border-2 border-white-light rounded-full text-3xl md:text-lg text-white-light font-display" %>
  </div>

<!-- Resources results -->
  <div class="flex-1 overflow-y-auto lg:grid lg:grid-cols-3 lg:grid-cols-4 lg:gap-x-2 lg:gap-y-1 mx-8">
    <%= render 'resources_results', resources: @resources %>
  </div>

<!-- Homepage button -->
  <div class="py-8 flex justify-center">
    <%= link_to 'Homepage', root_path, class: "text-2xl xl:text-base text-white-light hover:text-white-darker" %>
